@model ShoppingStore_DlloSat.DAL.Entities.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Categoría</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="../Shared/PartialViews/_CategoryCreateEdit" />

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" /> @*Esto me sirve para que los valores que no serán modificados, simplemente no se sobreescriban por un valor vácío*@
            <div class="form-group">
                </br>
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
